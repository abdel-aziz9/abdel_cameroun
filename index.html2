<style>
/* ---------- RESET & BASE ---------- */
:root{
  --bg1:#0f1724;
  --bg2:#071229;
  --accent:linear-gradient(135deg,#06b6d4,#7c3aed);
  --muted:rgba(255,255,255,0.7);
  --glass:rgba(255,255,255,0.08);
  --radius:14px;
}
*{box-sizing:border-box; margin:0; padding:0;}

body{
  font-family:Inter,Arial,sans-serif;
  background:linear-gradient(180deg,var(--bg1),var(--bg2));
  color:#fff;
  display:flex;
  justify-content:center;
  padding-top:70px; /* header space */
}

/* ---------- HEADER ---------- */
header{
  width:100%;
  position:fixed;
  top:0;
  left:0;
  z-index:1000;
  background:rgba(3,10,25,0.8);
  backdrop-filter:blur(10px);
  border-bottom:1px solid rgba(255,255,255,0.05);
}
.navbar{
  max-width:1200px;
  margin:auto;
  display:flex;
  justify-content:space-between;
  align-items:center;
  padding:10px 20px;
}
.navbar .logo{
  display:flex;
  align-items:center;
  gap:8px;
}
.navbar svg{
  width:38px;height:38px;
}
.navbar h2 { font-size:18px; }

nav ul{
  display:flex;
  list-style:none;
  gap:20px;
}
nav a{
  color:var(--muted);
  text-decoration:none;
  font-size:14px;
  transition:.3s;
}
nav a:hover{ color:#fff; }

.cta-nav{
  background:var(--accent);
  padding:10px 14px;
  border-radius:8px;
  font-size:13px;
  border:none;
  cursor:pointer;
}

/* ---------- BURGER MENU ---------- */
.burger{
  display:none;
  flex-direction:column;
  gap:5px;
  cursor:pointer;
}
.burger div{
  width:25px;
  height:3px;
  background:#fff;
  border-radius:2px;
}

/* ---------- MAIN LAYOUT ---------- */
.container{
  max-width:1200px;
  width:100%;
  display:grid;
  grid-template-columns:380px 1fr;
  gap:22px;
  padding:20px;
}

.brand{
  background:var(--glass);
  padding:24px;
  border-radius:var(--radius);
  text-align:center;
}
.brand svg{ width:70px;height:70px; }
.subtitle{ font-size:13px; color:var(--muted); margin-top:6px; }

.panel{
  background:var(--glass);
  padding:20px;
  border-radius:var(--radius);
  display:grid;
  grid-template-columns:1fr 300px;
  gap:18px;
}

.tabs{display:flex;gap:8px;margin-bottom:12px;}
.tab{
  padding:10px 14px;
  border-radius:10px;
  cursor:pointer;
  border:1px solid var(--muted);
  font-size:13px;
}
.tab.active{
  background:var(--accent);
  border:none;
}

label{font-size:12px;}
input,select{
  width:100%;
  padding:12px;
  border-radius:10px;
  border:none;
  margin-bottom:8px;
}

.result{
  background:#12263b;
  padding:12px;
  border-radius:12px;
  margin-top:6px;
  display:flex;
  justify-content:space-between;
}
.result span:last-child{
  font-size:20px;
  font-weight:700;
}

.actions{display:flex;gap:10px;margin-top:10px;}
.btn{
  padding:12px;
  border:none;
  border-radius:8px;
  cursor:pointer;
  font-size:14px;
}
.primary{background:var(--accent);}
.secondary{
  background:#1e293b;
  border:1px solid #2f3b52;
  color:var(--muted);
}

.rate,.crypto-card{
  background:#12263b;
  padding:14px;
  border-radius:10px;
  margin-bottom:10px;
}

/* ---------- FOOTER ---------- */
footer{
  text-align:center;
  margin-top:14px;
  font-size:13px;
  color:var(--muted);
}

/* ---------- RESPONSIVE ---------- */
@media(max-width:1080px){
  .container{grid-template-columns:1fr;}
  .brand{order:2;}
  .main{order:1;}
}
@media(max-width:880px){
  .panel{grid-template-columns:1fr !important;}
}
@media(max-width:720px){
  nav ul{
    position:absolute;
    top:58px;
    right:0;
    width:100%;
    background:#091426f2;
    flex-direction:column;
    gap:16px;
    padding:18px;
    display:none;
  }
  nav ul.active{ display:flex; }
  .burger{ display:flex; }
}
@media(max-width:540px){
  .actions{flex-direction:column;}
  .btn{width:100%;}
  .tabs{flex-wrap:wrap;}
  .tab{width:100%;text-align:center;}
  .result{flex-direction:column;text-align:center;}
}
</style>

<script>
function toggleMenu(){
