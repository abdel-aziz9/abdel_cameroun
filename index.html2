}
.logo h2{font-size:18px;}
nav ul{display:flex;gap:20px;list-style:none;}
nav a{color:var(--muted);text-decoration:none;font-size:14px;}
nav a:hover{color:#fff;}
.cta-nav{background:var(--accent);padding:10px 14px;border-radius:8px;font-size:13px;}
.burger{display:none;cursor:pointer;}
.burger div{width:25px;height:3px;background:white;margin:4px;border-radius:1px;}
.container{width:100%;max-width:1200px;margin:auto;padding:16px;display:flex;flex-direction:column;gap:22px;}
.box{background:var(--glass);padding:18px;border-radius:var(--radius);}
.center{text-align:center;}
.brand svg{width:70px;height:70px;}
.grid-2{display:grid;grid-template-columns:1fr 1fr;gap:16px;}
input,select{width:100%;padding:12px;border-radius:10px;border:none;margin-top:6px;}
.result{background:#14263a;padding:12px;border-radius:10px;margin-top:10px;font-size:18px;display:flex;justify-content:space-between;}
.btn{padding:12px;border-radius:10px;border:none;cursor:pointer;width:100%;}
.primary{background:var(--accent);}
.secondary{background:#1e293b;border:1px solid #354052;color:var(--muted);}
footer{text-align:center;margin:12px 0;color:var(--muted);font-size:13px;}
@media(max-width:950px){.grid-2{grid-template-columns:1fr;}}
@media(max-width:720px){nav ul{display:none;}.burger{display:block;}}
@media(max-width:500px){body{padding-top:82px;}input,select{font-size:14px;}}
</style>

<script>
